{
    "compileOnSave": false,
    "include": ["@declaration", "src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "es5",

        "strict": true,

        "jsx": "preserve",
        "jsxFactory": "h",

        "module": "esnext",
        "moduleResolution": "node",

        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,

        "allowJs": false,
        "resolveJsonModule": true,

        "lib": ["dom", "es5", "es6", "es7", "esnext", "es2015.promise"],

        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
        },

        "sourceMap": true
    }
}
